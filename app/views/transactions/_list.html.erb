<%= list_item_open(params, transaction) %>
    <%= "Coin Type: #{transaction.coin.name}<br>".html_safe if params[:controller] != "wallets"%>
    USD spent: <%= format_dollar_amount_of('%.2f' % transaction.money_in, "") %><br>
    Price Per Coin: <%= format_dollar_amount_of('%.2f' % transaction.price_per_coin, "") %><br> 
    Coins purchased: <%= '%.4f' % transaction.quantity %><br>
    <% if show_link_to_more == true %>
        <%= link_to user_transaction_path(current_user,transaction), class: "link link_left black-80" do %>
            <i class="fa fa-info-circle"></i>
        <% end %>  
    <% end %><br><br>
<%= list_item_close(params) %>