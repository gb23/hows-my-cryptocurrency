<main class="pa0 black-80">
  <div class="measure center">
    <fieldset class="ba b--transparent ph0 mh0">
      <legend class="f4 fw6 ph0 mh0">Sign Up</legend>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="mt3">
            <%= f.label :name, class: "db fw6 lh-copy f6" %>
            <%= f.text_field :name, autofocus: true, class: "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
        </div>

        <div class="mv3">
            <%= f.label :email, class: "db fw6 lh-copy f6" %>
            <%= f.email_field :email, class: "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
        </div>

        <div class="mv3">
          <%= f.label :password, class: "db fw6 lh-copy f6"  %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
        </div>

        <div class="mv3">
          <%= f.label :password_confirmation, class: "db fw6 lh-copy f6"  %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
        </div>

        <div class="">
          <%= f.submit "Sign up", class: "b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6 dib" %>
        </div>
      <% end %>
</fieldset>
    <%= render "devise/shared/links" %>
  </div>
</main>