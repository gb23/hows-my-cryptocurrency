<main class="pa0 black-80">
  <div class="measure center">
    <fieldset class="ba b--transparent ph0 mh0">    
      <legend class="f4 fw6 ph0 mh0">Forgot your password?</legend>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="mt3">
          <%= f.label :email, class: "db fw6 lh-copy f6" %>
          <%= f.email_field :email, autofocus: true, class: "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
        </div>
    </fieldset>
        <div class="">
          <%= f.submit "Send me reset password instructions", class: "b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6 dib" %>
        </div>
      <% end %>

    <%= render "devise/shared/links" %>
  </div>
</main>
